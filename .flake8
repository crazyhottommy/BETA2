[flake8]
# Maximum line length - relaxed for legacy code
max-line-length = 150

# Ignore non-critical style warnings from legacy Python 2 codebase
# E501: line too long
# F403: star imports
# F405: undefined names from star imports
# E731: lambda assignment
# E741: ambiguous variable names
# F841: local variable assigned but never used
# E266: too many leading '#' for block comment
# E203: whitespace before ':'
# C901: function too complex
# W503: line break before binary operator
# E402: module level import not at top of file
# E401: multiple imports on one line
# E712: comparison to True/False (should use 'is')
# E722: bare except
# E721: do not compare types with ==
# E265: block comment formatting
# F401: imported but unused (many used via star imports or in tests)
ignore = E501,F403,F405,E731,E741,F841,E266,E203,C901,W503,E402,E401,E712,E722,E721,E265,F401

# Exclude files with mixed tabs/spaces that need major refactoring
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    .venv,
    venv,
    src/beta/motif/motif_parser.py

# Keep checking for actual errors:
# - F821: undefined name
# - E999: syntax error
# - F401: imported but unused
# - E722: bare except
